@using Syncfusion.Blazor.Charts
<SfChart Title="Annual Crude Steel Production by Country (2016–2024)" SubTitle="Source: wikipedia.org" Width="90%">
    <ChartTitleStyle TextOverflow="TextOverflow.Wrap" />
    <ChartSubTitleStyle TextOverflow="TextOverflow.Wrap" />
    <ChartArea>
        <ChartAreaBorder Width="0" />
    </ChartArea>
    <ChartMargin Bottom="12" />
    <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.DateTime" EdgeLabelPlacement="EdgeLabelPlacement.Shift">
        <ChartAxisMajorGridLines Width="0" />
    </ChartPrimaryXAxis>
    <ChartPrimaryYAxis Title="Volume in million metric tons" Minimum="0" Interval="5" Maximum="25" RangePadding="ChartRangePadding.None">
        <ChartAxisLineStyle Width="0" />
        <ChartAxisMajorTickLines Width="0" />
    </ChartPrimaryYAxis>
    <ChartTooltipSettings Enable="true" EnableHighlight="true" ShowNearestTooltip="true"
                          Header="<b>${series.name}</b>" Format="${point.x} : <b>${point.y}M</b>" />
    <ChartSeriesCollection>
        <ChartSeries DataSource="@VietnamData" Name="Vietnam" XName="X" YName="Y" Type="ChartSeriesType.Spline" Width="2" Opacity="1">
            <ChartMarker Visible="true" Width="7" Height="7" IsFilled="true" Shape="ChartShape.Circle" />
        </ChartSeries>
        <ChartSeries DataSource="@IndonesiaData" Name="Indonesia" XName="X" YName="Y" Type="ChartSeriesType.Spline" Width="2" Opacity="1">
            <ChartMarker Visible="true" Width="6" Height="6" IsFilled="true" Shape="ChartShape.Triangle" />
        </ChartSeries>
        <ChartSeries DataSource="@FranceData" Name="France" XName="X" YName="Y" Type="ChartSeriesType.Spline" Width="2" Opacity="1">
            <ChartMarker Visible="true" Width="7" Height="7" IsFilled="true" Shape="ChartShape.Diamond" />
        </ChartSeries>
        <ChartSeries DataSource="@PolandData" Name="Poland" XName="X" YName="Y" Type="ChartSeriesType.Spline" Width="2" Opacity="1">
            <ChartMarker Visible="true" Width="5" Height="5" IsFilled="true" Shape="ChartShape.Rectangle" />
        </ChartSeries>
        <ChartSeries DataSource="@MexicoData" Name="Mexico" XName="X" YName="Y" Type="ChartSeriesType.Spline" Width="2" Opacity="1">
            <ChartMarker Visible="true" Width="7" Height="7" IsFilled="true" Shape="ChartShape.Pentagon" />
        </ChartSeries>
    </ChartSeriesCollection>
    <ChartLegendSettings EnableHighlight="true" />
</SfChart>

